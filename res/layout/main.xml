<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity" >

    <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:numColumns="1"
            android:scrollingCache="true" android:layout_alignParentTop="true" android:layout_above="@+id/pageLabel"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevPageButton" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:onClick="prevButtonClick" android:background="@drawable/ic_action_arrow_back"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextPageButton" android:layout_alignTop="@+id/prevPageButton" android:layout_alignParentEnd="true"
            android:onClick="nextButtonClick" android:background="@drawable/ic_action_arrow_forw"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/pageLabel" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

</RelativeLayout>